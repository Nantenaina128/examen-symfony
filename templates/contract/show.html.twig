{% extends 'base.html.twig' %}

{% block title %}Contract{% endblock %}

{% block body %}
    <h1>Contract</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contract.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contract.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ contract.startDate ? contract.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ contract.endDate ? contract.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Parties</th>
                <td>{{ contract.parties }}</td>
            </tr>
            <tr>
                <th>Renewed</th>
                <td>{{ contract.renewed ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contract_index') }}">back to list</a>

    <a href="{{ path('app_contract_edit', {'id': contract.id}) }}">edit</a>

    {{ include('contract/_delete_form.html.twig') }}
{% endblock %}
